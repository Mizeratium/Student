<Page x:Class="StudentAPK.Pages.PageAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentAPK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuto">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="WhiteSmoke" Grid.Row="1" Grid.Column="1" CornerRadius="20">
            <StackPanel VerticalAlignment="Center" Margin="20">
                <Label Content="АВТОРИЗАЦИЯ"/>
                <TextBlock x:Name="txtLogin" Text="Логин"/>
                <TextBox x:Name="txbLogin"/>
                <TextBlock x:Name="txtPasswprd" Text="Пароль"/>
                <PasswordBox x:Name="txbPassword"/>
                <Button Content="Вход" Click="ClEventAuto" Margin="15"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
