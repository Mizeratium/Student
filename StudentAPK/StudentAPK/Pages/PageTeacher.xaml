<Page x:Class="StudentAPK.Pages.PageTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentAPK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageTeacher">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Button x:Name="btnStudents" Content="Студенты" Margin="20" Height="25" Click="btnStudents_Click"/>
            <Button x:Name="btnAddNewStudent" Content="Добавить студента" Margin="20" Height="25" Click="btnStudents_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="0" VerticalAlignment="Bottom">
            <Button x:Name="btnExit" Content="Выйти" Margin="20" Height="25" Click="btnStudents_Click"/>
        </StackPanel>
        <Frame Grid.Column="1" x:Name="NavFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
